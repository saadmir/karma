  },

  "dependencies": {
    "forever":                      "0.10.x",
    "forever-monitor":              "1.x.x",
    "express":                      "3.x.x",
    "ejs":                          "0.8.x",
    "underscore":                   "1.x.x",
    "tracer":                       "0.5.x",
    "winston":                      "0.7.x",
    "node-uuid":                    "1.4.x",
    "nodemailer":                   "*",
    "request":                      "*",
    "optimist":                     "*",
    "mongodb":                      "*",
    "mongoose":                     "*",
    "q":                            "0.9.x"
  },

  "engines": {
    "node":                         "0.10.x",
    "npm":                          "1.2.x"
  }
}

